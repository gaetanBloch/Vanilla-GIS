{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["/node_modules", "/public"],
    "rules": {
        "prettier/prettier": ["error", {"singleQuote": true, "parser": "flow"}]
    }
}
