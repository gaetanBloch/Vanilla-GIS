{
  "secrets": {
    "ignKey": "choisirgeoportail"
  },
  "maps": {
    "ol": {
      "ignVector" : {
        "title": "IGN Vector",
        "default": true,
        "type": "vector",
        "format": "mvt",
        "tileUrl": "https://wxs.ign.fr/((ignKey))/geoportail/tms/1.0.0/PLAN.IGN/{z}/{x}/{y}.pbf",
        "styleUrl": "https://wxs.ign.fr/((ignKey))/static/vectorTiles/styles/PLAN.IGN/standard.json",
        "attributions": [
          "<a href=\"https://geoservices.ign.fr/documentation/geoservices/vecteur-tuile.html\">Â© IGN Geoportal</a></br>"
        ]
      },
      "osmRaster": {
        "title": "OSM Raster",
        "default": true
      }
    }
  },
  "features": {
    "ol": {
      "geolocation": [{
          "title": "BAN",
          "default": true,
          "method": "GET",
          "requestUrl": "https://api-adresse.data.gouv.fr/search?q={{address}}&limit=1"
        }]
      },
      "reverseGeolocation": [{
          "title": "BAN",
          "default": true,
          "method": "GET",
          "requestUrl": "https://api-adresse.data.gouv.fr/reverse?lon={{lon}}&lat={{lat}}"
        }]
      },
      "itinerary": [{
          "title": "IGN",
          "default": true,
          "method": "GET",
          "requestUrl": "https://wxs.ign.fr/((ignKey))/itineraire/rest/route.json?origin={{origin}}&destination={{destination}}&method={{method}}&graphName={{locomotion}}",
          "format": "wkt",
          "drawField": "geometryWkt",
          "distanceField": "distance",
          "durationFiled": "duration"
        }]
      }
    }
  }
}
